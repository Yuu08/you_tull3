<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Spinner
        android:id="@+id/spinner_month"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <Spinner
        android:id="@+id/spinner_year"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/income_sum_month"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/income_month_text"
        app:layout_constraintTop_toTopOf="@+id/income_month_text" />

    <TextView
        android:id="@+id/income_month_text"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="月の合計収入金額"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_month" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="年"
        app:layout_constraintStart_toEndOf="@+id/spinner_year"
        app:layout_constraintTop_toTopOf="@+id/spinner_year" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="月"
        app:layout_constraintStart_toEndOf="@+id/spinner_month"
        app:layout_constraintTop_toTopOf="@+id/spinner_month" />

    <Spinner
        android:id="@+id/spinner_year2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expense_month_text" />

    <TextView
        android:id="@+id/income_year_text"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="年間の合計収入金額"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_year2" />

    <TextView
        android:id="@+id/income_sum_year"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/income_year_text"
        app:layout_constraintTop_toTopOf="@+id/income_year_text" />

    <TextView
        android:id="@+id/expense_month_text"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="月の合計支出金額"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_month_text" />

    <TextView
        android:id="@+id/expense_sum_month"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/expense_month_text"
        app:layout_constraintTop_toTopOf="@+id/expense_month_text" />

    <TextView
        android:id="@+id/expense_year_text"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="年間の合計支出金額"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_year_text" />

    <TextView
        android:id="@+id/expense_sum_year"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/expense_year_text"
        app:layout_constraintTop_toTopOf="@+id/expense_year_text" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="年"
        app:layout_constraintStart_toEndOf="@+id/spinner_year2"
        app:layout_constraintTop_toTopOf="@+id/spinner_year2" />


</androidx.constraintlayout.widget.ConstraintLayout>